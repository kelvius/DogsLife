<%= form_with model: @owner do |form| %>
  <div class="field">
    <%= form.label :name, class: "label" %>
    <div class="control">
      <%= form.text_field :name, class: "input" %>
    </div>
    <% owner.errors.full_messages_for(:name).each do |message| %>
      <p class="help is-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :address, class: "label" %>
    <div class="control">
      <%= form.text_area :address, class: "textarea" %>
    </div>
    <% owner.errors.full_messages_for(:address).each do |message| %>
      <p class="help is-danger"><%= message %></p>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :status, class: "label" %>
    <div class="control">
      <%= form.select :status, Visible::VALID_STATUSES, { selected: owner.status || 'public' }, class: "select" %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= form.submit "Save", class: "button is-primary" %>
    </div>
  </div>
<% end %>